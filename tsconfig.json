{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types",
      "./typings.d.ts"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@services/*": [ "app/services/*" ],
      "@utilities/*": [ "app/utilities/*" ],
      "@reducers/*": [ "app/reducers/*" ]
    }
  },
  "exclude": [
    "node_modules",
    ".ng_pkg_build",
    "lib-dist"
  ]
}